#!/bin/bash

TITLE="$(basename $BASH_SOURCE) - Peek into my world lol"

NOC='\033[0m'
RED='\033[0;31m'
GRN='\033[0;32m'

# no ctrl-c when interrupting
stty -echoctl

#global params
params=("$@")

function enable()
{
    for i in "${params[@]}";do
        ufw allow "$i" > /dev/null 2>&1
        printf "${GRN}[+]${NOC} Opened port %5s\n" ""$i""
    done
}

function disable()
{
    for i in "${params[@]}";do
        ufw delete allow "$i" > /dev/null 2>&1
        printf "${RED}[-]${NOC} Closed port %5s\n" ""$i""
    done
    exit 0
}

# main
if [ $UID != 0 ];then
    printf "${RED}Please run this script as root\n"
    exit 1
else
    if [ $# -gt 0 ];then
        enable
        trap disable SIGINT
        trap disable SIGTERM
        
        while true;do
            sleep 1s
        done
    else
        printf "${RED}No port specified. Abort"
        exit -1
    fi

fi
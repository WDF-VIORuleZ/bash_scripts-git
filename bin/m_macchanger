#!/bin/bash

TITLE="TiMac - A Time based MAC-Adress Changer"

if [[ $UID != 0 ]]; then
    echo "Please run this script with sudo:"
    exit 1
  else
    if [ "$#" -ne 3 ]
        then
    	    echo "Syntax: TiMac [hours] [minutes] [seconds]"
          exit 1
        else
          echo "[OK] Starting TiMAC ..."
          #str="macchanger --random $wifi"
        	wifi=$(ip r show | grep " src " | cut -d " " -f 3,12)
          if [ ! -z $wifi]; then
            while true
            do
              time = 'echo "$1+$2*60+$3*360" | bc'
              echo time
              sleep time

              clear
              printf "[OK] Wifi Interface: $wifi\n"
              sudo ifconfig $wifi down
              printf "[OK] $wifi down\n"
            	sudo macchanger --random $wifi
              sudo ifconfig $wifi up
              printf "[OK] $wifi up\n"
              # time in seconds
              time = 'echo "$1+$2*60+$3*360" | bc'

              sleep time
            done
            #TODO Implement crontab
          	#echo "[INFO] Next MAC-Adress is genereated in ($1):($2):($3)"
          else
            printf "[ERR] Did not get wifi-interface. Mission abort"
            exit -1
          fi
     fi
fi
